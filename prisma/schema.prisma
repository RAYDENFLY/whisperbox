generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  isAcceptingMessages Boolean @default(true)
  
  messages Message[]

  @@map("users")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  createdAt DateTime @default(now())
  
  senderType SenderType @default(ANON)
  senderName String?    // For initials or random name
  
  isRead     Boolean @default(false)
  isArchived Boolean @default(false)

  reply      String?
  repliedAt  DateTime?

  replyImage ReplyImage? // Relation to separate image document
  
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  @@map("messages")
}

model ReplyImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  data      String   // Base64 string
  createdAt DateTime @default(now())

  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId String  @unique @db.ObjectId

  @@map("reply_images")
}

enum SenderType {
  ANON
  INITIALS
  NAME
}

model BlockedIp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  ip        String   @unique
  createdAt DateTime @default(now())
  
  @@map("blocked_ips")
}
